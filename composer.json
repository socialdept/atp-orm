{
    "name": "socialdept/atp-orm",
    "description": "Eloquent-like ORM for AT Protocol remote records in Laravel",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/socialdept/atp-orm",
    "keywords": [
        "Laravel",
        "AT Protocol",
        "Bluesky",
        "ATP",
        "ORM",
        "Object Relational Mapping"
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "socialdept/atp-client": "^0.0",
        "socialdept/atp-schema": "^0.3",
        "socialdept/atp-resolver": "^1.1"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0",
        "socialdept/atp-signals": "^1.2",
        "friendsofphp/php-cs-fixer": "^3.89"
    },
    "suggest": {
        "socialdept/atp-signals": "Enables automatic cache invalidation via firehose/jetstream and CAR-based bulk loading via getRepo (^1.2)"
    },
    "autoload": {
        "psr-4": {
            "SocialDept\\AtpOrm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SocialDept\\AtpOrm\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SocialDept\\AtpOrm\\AtpOrmServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
